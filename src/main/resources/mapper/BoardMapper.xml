<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.BoardMapper">

    <!-- 아래내용 수정중 -->
    <insert id="createPost" parameterType="com.example.demo.dto.PostDto">
        insert into Hanamoa(title, content, writer)
        values (#{title}, #{content}, #{writer})
    </insert>

    <select
            id="selectBoardDetail"
            parameterType="int"
            resultType="com.example.demo.dto.PostDto">
        select * from post where id = ${id}
    </select>

    <select id="selectBoardList"
            resultType="com.example.demo.dto.PostDto">
        select * from Hanamoa
    </select>

    <update id="updatePost" parameterType="com.example.demo.dto.PostDto">
        update Hanamoa
        set
            title = #{title},
            content = #{content},
            writer= #{writer}
        where id = ${id}
    </update>

    <delete id="deletePost" parameterType="int">
        delete from Hanamoa where id = ${id}
    </delete>

</mapper>