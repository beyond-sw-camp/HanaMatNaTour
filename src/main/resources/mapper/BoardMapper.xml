<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.BoardMapper">

    <!-- 아래내용 수정중 -->
    <insert id="createPost" parameterType="com.example.demo.dto.PostDto">
        insert into POST(title, content, writer)
        values (#{title}, #{content}, #{writer})
        <!-- #{title} == 'title' -->
        <!-- ${title} == title -->
    </insert>

    <select
            id="readPost"
            parameterType="int"
            resultType="dev.yeon.mybatis.dto.PostDto">
        select * from post where id = ${id}
    </select>

    <select id="readPostAll"
            resultType="dev.yeon.mybatis.dto.PostDto">
        select * from post
    </select>

    <select id="readPostQuery"
            parameterType="dev.yeon.mybatis.dto.PostDto"
            resultType="dev.yeon.mybatis.dto.PostDto">
        select * from post
        where title = #{title}
        <if test="writer != null">
            and writer = #{writer}
        </if>
    </select>

    <update id="updatePost" parameterType="dev.yeon.mybatis.dto.PostDto">
        update post
        set
            title = #{title},
            content = #{content},
            writer= #{writer},
            board = ${board}
        where id = ${id}
    </update>

    <delete id="deletePost" parameterType="int">
        delete from post where id = ${id}
    </delete>

</mapper>